{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "client/src/code", "server/src", "types"]
  },
  "include": [
    "client/**/*",
    "server/**/*",
    "shared/**/*",
    "build/**/*",
    "types/**/*"
  ]
}
